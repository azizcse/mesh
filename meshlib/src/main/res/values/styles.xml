<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <!--<item name="colorAccent">#009688</item>-->
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:lineSpacingExtra">8dp</item>

    </style>

    <style name="data_share_radio">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/MyRaidoButton</item>
        <item name="android:layout_marginStart">@dimen/dp_50</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:buttonTint">@color/colorWhite</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="MyRaidoButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">#0091ea</item>
        <item name="android:textColorPrimaryDisableOnly">#f44336</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="limit_radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/RadioButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:buttonTint">@color/colorGradientPrimary</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorGradientPrimary</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorAccent">@color/colorGradientPrimary</item>
    </style>

    <style name="allTextInputOfLayoutBlack">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Tooltip">
        <item name="android:text">Hello World!</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="cornerRadius">10dp</item>
        <!--        <item name="arrowWidth">48dp</item>
                <item name="arrowHeight">48dp</item>-->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

</resources>